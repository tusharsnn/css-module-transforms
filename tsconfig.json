{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ES2018",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        // These options are controlled by the tsup config
        "sourceMap": false,
        "declaration": false,
        "outDir": ""
    },
    "include": [
        "./src/**/*.ts",
        "./tests/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}