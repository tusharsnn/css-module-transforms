{
  "compilerOptions": {
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "incremental": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",
    "outDir": "./dist",
  },
  "include": [
    "src/*.ts",
  ],
  "exclude": [
    "node_modules",
    "tests"
  ]
}